<core:FragmentDefinition xmlns="sap.m" xmlns:ux="sap.uxap"
  xmlns:layout="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
  <Dialog xmlns="sap.m" id="idCreateScenario" title="CreateScenario">
    <content>
      <f:SimpleForm id="SimpleFormCreateScenario" maxContainerCols="2"
        layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3"
        emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1">
        <f:content>
          
          <Label text="Scenario" class="labelHeadingClass" />
	          <HBox>
	          <Input id="IdScenarioVal" type="Text" placeholder="Scenario"/>
	          </HBox>
          <Label text="Entity" class="labelHeadingClass" />
          <HBox>
        	<Input id="IdEntity"  type="Text" placeholder="Entity"/>
            <Label text="" width="1rem" />
          </HBox>
        </f:content>
      </f:SimpleForm>


    </content> <!-- sap.ui.core.Control -->
    <beginButton>
      <Button text="OK" press="OnScenarioOk">
      </Button>
    </beginButton> 
    <endButton>
      <Button text="Cancel" press="closeScenarioDialog"></Button>
    </endButton> 
   
  </Dialog>
</core:FragmentDefinition>